<!DOCTYPE html>
<html>
  <head>
    <title>Digidentity</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice %>
      <p style="background-color: lightgreen;"><%= notice %></p>
    <% end %>

    <% if alert %>
      <p style="background-color: lightcoral;"><%= alert %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
